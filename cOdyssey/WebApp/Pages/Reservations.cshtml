@page
@model WebApp.Pages.Reservations

<h2>Your Reservations</h2>

@if (!Model.ReservationsList.Any())
{
    <p>No reservations found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Company Name</th>
            <th>Price</th>
            <th>Flight Start</th>
            <th>Flight End</th>
            <th>Distance (km)</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var reservation in Model.ReservationsList)
        {
            <tr>
                <td>@reservation.FirstName</td>
                <td>@reservation.LastName</td>
                <td>@reservation.Source</td>
                <td>@reservation.Destination</td>
                <td>@reservation.CompanyName</td>
                <td>@reservation.Price.ToString("0.00")â‚¬</td>
                <td>@reservation.FlightStart.ToString("g")</td>
                <td>@reservation.FlightEnd.ToString("g")</td>
                <td>@reservation.Distance</td>
            </tr>
        }
        </tbody>
    </table>
}